<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/lib/brdevelopers.com.jobvibe"
    xmlns:style="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="7">
        <ImageView
            android:id="@+id/IV_back_forget"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_arrow_white" />


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Enter the registered email"
            android:layout_gravity="center"
            android:textColor="#F1ECEC"
            android:textStyle="bold"
            android:gravity="center"/>

        <EditText
            android:id="@+id/user_email_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="31dp"
            android:background="@drawable/orangeborder_whiteback"
            android:ems="10"
            android:inputType="text"
           android:textColor="#FFFFFF"
          

            android:hint="Enter Email"
            android:paddingLeft="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/TV_loginbutton_useremail_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RL_login"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/signup_btn_bg"
            android:elevation="10dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Validate Email"
            android:textColor="#FCF9F9"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/usertoggle_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Enter New Password"
            android:layout_gravity="center"
            android:textColor="#F1ECEC"
            android:visibility="gone"
            android:textStyle="bold"
            android:gravity="center"/>






        <EditText
            android:id="@+id/user_password_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/orangeborder_whiteback"
            android:ems="10"
            android:visibility="gone"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:paddingLeft="@dimen/_10sdp"
            android:hint="user Password"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_weight="5"
                android:id="@+id/TV_loginbutton_user_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RL_login"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="#0DE616"
                android:elevation="10dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Update"
                android:textColor="#FCF9F9"
                android:textSize="14dp"
                android:textStyle="bold"

                android:visibility="gone"/>
            <TextView
                android:layout_weight="5"
                android:id="@+id/TV_loginbutton_user_forget_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RL_login"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="#FC0505"
                android:elevation="10dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Cancel"
                android:textColor="#FCF9F9"
                android:textSize="14dp"
                android:textStyle="bold"

                android:visibility="gone"/>
        </LinearLayout>





    </LinearLayout>


</LinearLayout>